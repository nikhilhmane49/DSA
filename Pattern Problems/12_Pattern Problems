#include <iostream>
using namespace std;
int main() {

//******************** star pattern 12*************************



for(int i=1;i<=4;i++){
    for(int j=1;j<=i;j++){
        cout<<j;
    }
    for(int k=1; k<=4*2-2*i ; k++){
        cout<<" ";
    }
    for(int v=i;v>0;v--){
        cout<<v;
    }
    
    cout<<endl;
}



    return 0;
}
