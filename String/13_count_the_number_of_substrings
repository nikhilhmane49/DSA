


 count the number of substrings of a given string------->




//***************************method-1(using formula)


formula for calulation of number of substring count=n*(n+1)/2


#include <iostream>
#include <string>

using namespace std;

int main() {
    string s="abac";
    
    int n=s.length();
    
    cout<<n<<endl;
    
    int result=n*(n+1)/2;
    
    cout<<result;


    return 0;

}





//************************************method 2(using substring method)


// Online C++ compiler to run C++ program online
#include <iostream>
#include <string>

using namespace std;

int main() {
   
     int count=0;
     
    for(int i=0;i<n;i++){
        for(int j=i;j<n;j++){
            cout<<s.substr(i,j-i+1)<<endl;
            count++;
        }
    }
    
    cout<<count;

    return 0;
}
